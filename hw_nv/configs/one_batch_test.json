{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22500,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "arch": {
    "generator": {
      "type": "Generator",
      "args": {
        "D_r": [[1, 1], [3, 1], [5, 1]],
        "K_r": [3, 7, 11],
        "k_u": [16, 16, 4, 4],
        "h_u": 512
      }
    },
    "discriminator": {
      "type": "Discriminator",
      "args": {
        "periods": [2, 3, 5, 7, 11]
      }
    }
  },
  "data": {
    "train": {
      "batch_size": 16,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "segment_size": 8192
          }
        }
      ]
    }
  },
  "optimizer_gen": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas": [0.8, 0.99],
      "weight_decay": 1e-2
    }
  },
  "optimizer_disc": {
    "type": "AdamW",
    "args": {
      "lr": 2e-4,
      "betas": [0.8, 0.99],
      "weight_decay": 1e-2
    }
  },
  "loss_gen": {
    "type": "GeneratorLoss",
    "args": {}
  },
  "loss_disc": {
    "type": "DiscriminatorLoss",
    "args": {}
  },
  "lr_scheduler_den": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.99
    }
  },
  "lr_scheduler_disc": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.99
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "nv_project",
    "grad_norm_clip": 20,
    "len_epoch": 100
  }
}
